section.Content
    perspective 10000
    overflow hidden

    ui-view
        transform-style preserve-3d

        &.ng-leave
            position absolute
            top 0
            transition 0.6s cubic-bezier(0.6, -0.28, 0.735, 0.045)
            height 100%

        &.-right
            transform-origin left top

            &.ng-leave-active
                transform rotateX(30deg) rotateY(-115deg)

        &.-left
            transform-origin right top

            &.ng-leave-active
                transform rotateX(30deg) rotateY(115deg)
