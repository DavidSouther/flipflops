section.Content
    // font-size 16pt
    text-align justify
    perspective 10000
    overflow hidden

    ui-view
        display block
        transform-origin left top
        transform-style preserve-3d

        &.ng-leave
            position absolute
            top 0
            transition 0.6s
            height 100%
            background #FFFFFE

        &.ng-leave-active
            transform rotateX(30deg) rotateY(-115deg)
