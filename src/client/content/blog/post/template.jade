article
    header
        h2 {{front.title}}
        p._publish-date
            time {{ front.date | date:medium }}
        p._author {{ front.author }}
        p Categories:
            span(ng-repeat="cat in front.categories")&nbsp;{{ cat }}

    div(ng-bind-html="content")

    footer
        a._previous(
            href="{{ previous.path }}"
            ng-show="previous"
        ) Previous
        a._next(
            href="{{ next.path }}"
            ng-show="next"
        ) Next
